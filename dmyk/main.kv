#:kivy 2.0
#:import Metrics kivy.metrics

<Tela>:
    BoxLayout:
        orientation: 'vertical'
        id: box
        TextInput:
            id: link
            hint_text: 'Link do vídeo ou playlist'
            multiline: True
            # font_size: self.height * 0.12
            font_size: Metrics.dp(20)
            halign: 'center'
            padding: [0, self.height * 0.4, 0, 0]
        BoxLayout:
            orientation: 'horizontal'
            id: format
            size_hint_y: None
            height: Metrics.dp(120)
            ToggleButton:
                id: mp3
                text: 'MP3'
                group: 'format'
            ToggleButton:
                id: mp4
                text: 'MP4'
                group: 'format'
                on_release: root.show_drop_down()
        Button:
            id: download_button
            text: 'Baixar Música ou playlist'
            on_release: root.main()
        BlueLabel:
            id: output
            text: ''
            on_touch_down: root.output_update()
        BoxLayout:
            padding: [0, 55, 0, 55]
            canvas.before:
                Color:
                    rgba: 0.27, 0.79, 0.99, 0.9
                Rectangle:
                    size: self.size
                    pos: self.pos
        
            MDProgressBar:
                id: test
                color: 0.5, 1, 0, 1
                max: 100
                value: 50
            

<BlueLabel@Label>:
    multiline: True
    #font_size: self.height * 0.15
    font_size: Metrics.dp(20)
    text_size: self.width, None
    halign: 'center'
    canvas.before:
        Color:
            rgba: 0.27, 0.79, 0.93, 0.9
        Rectangle:
            size: self.size
            pos: self.pos