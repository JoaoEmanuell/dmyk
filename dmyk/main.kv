#:kivy 2.0

<Tela>:
    MDBoxLayout:
        orientation: 'vertical'
        id: box
        md_bg_color: app.theme_cls.primary_color
        spacing: "10dp"
        MDTextFieldRect:
            id: link
            hint_text: 'Link do vídeo ou playlist'
            multiline: True
            font_size: "20dp"
            halign: 'center'
            mode: "rectangle"
            padding: [0, self.height * 0.4, 0, 0]
        CenterBoxLayout:
            spacing: "10dp"
            orientation: 'vertical'
            padding: [20, 20]
            CenterBoxLayout:
                orientation: 'horizontal'
                id: format
                spacing: "5dp"
                CustomToggleButton:
                    id: mp3
                    text: 'MP3'
                    group: 'format'
                    on_release: root.mp3_button_selected()
                CustomToggleButton:
                    id: mp4
                    text: 'MP4'
                    group: 'format'
                    on_release: root.show_drop_down()
            CenterBoxLayout:
                MDRoundFlatButton:
                    md_bg_color: 'lightblue'
                    id: download_button
                    text: 'Baixar Música ou playlist'
                    halign: 'center'
                    valign: 'center'
                    on_release: root.main()
                    text_color: "black"
                    theme_text_color: "ContrastParentBackground"
        BlueLabel:
            id: output
            text: ''
            on_touch_down: root.output_update()
        
            
<BlueLabel@MDLabel>:
    multiline: True
    font_size: "20dp"
    text_size: self.width, None
    halign: 'center'
    theme_text_color: "Custom"
    text_color: "white"
    font_style: "Body1"
    md_bg_color: 0.27, 0.79, 0.93, 0.9

<CustomToggleButton@MDRoundFlatButton+MDToggleButton>:
    md_bg_color: "lightblue"
    text_color: "black"
    background_normal: "lightblue"
    background_down: "cyan"
    font_color_normal: "black"
    font_color_down: "black"
    
<CenterBoxLayout@MDBoxLayout>:
    adaptive_size: True
    pos_hint: {"center_x": .5, "center_y": .5}